@{
    ViewData["Title"] = "Página Principal";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Propuestas")" class="card card-custom">
                <img class="card-img-top" src="/images/propuestas.jpg" alt="Propuestas de Trabajo">
                <div class="card-body">
                    <h5 class="card-title">Oportunidades de Empleo</h5>
                    <p class="card-text">Encuentra el trabajo ideal.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Profesionals")" class="card card-custom">
                <img class="card-img-top" src="/images/profesionales.jpg" alt="Profesionales">
                <div class="card-body">
                    <h5 class="card-title">Profesionales Calificados</h5>
                    <p class="card-text">Conecta con expertos en diferentes áreas.</p>
                </div>
            </a>
        </div>
        <div class="col-md-4">
            <a href="@Url.Action("Index", "Comunidad")" class="card card-custom">
                <img class="card-img-top" src="/images/comunidad.jpg" alt="Comunidad">
                <div class="card-body">
                    <h5 class="card-title">Comunidad</h5>
                    <p class="card-text">Únete a nuestra red de expertos y entusiastas.</p>
                </div>
            </a>
        </div>
    </div>

    <div class="section bg-1">
        <div class="overlay"></div>
        <div class="section-content">
            <h2>Oportunidades de Empleo</h2>
            <p>Encuentra el trabajo ideal en nuestra plataforma.</p>
        </div>
    </div>

    <div class="section bg-2">
        <div class="overlay"></div>
        <div class="section-content">
            <h2>Profesionales Calificados</h2>
            <p>Conecta con expertos en diferentes áreas.</p>
        </div>
    </div>

    <div class="section bg-3">
        <div class="overlay"></div>
        <div class="section-content">
            <h2>Comunidad</h2>
            <p>Únete a nuestra red de expertos y entusiastas.</p>
        </div>
    </div>

    <div class="row mt-5 carousel-container">
        <div class="col-md-12">
            <div id="testimonialCarousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="carousel-caption">
                                <p>Esta plataforma me ayudó a encontrar el trabajo de mis sueños. ¡Altamente recomendada!</p>
                                <footer class="blockquote-footer">Juan Pérez</footer>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="carousel-caption">
                                <p>TechConnect es la mejor manera de conectar con profesionales calificados.</p>
                                <footer class="blockquote-footer">María Gómez</footer>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item">
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="carousel-caption">
                                <p>Gracias a esta plataforma, encontré oportunidades laborales únicas.</p>
                                <footer class="blockquote-footer">Luis Rodríguez</footer>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#testimonialCarousel" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#testimonialCarousel" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
