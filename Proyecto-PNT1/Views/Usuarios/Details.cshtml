@model Proyecto_PNT1.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Profesional";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3>@Model.Nombre @Model.Apellido</h3>
                </div>
                <div class="card-body">
                    <h5 class="card-title">Profesión</h5>
                    <p class="card-text">@Model.Profesion</p>

                    <h5 class="card-title">Experiencia</h5>
                    <p class="card-text">@Model.Experiencia</p>

                    <h5 class="card-title">Email</h5>
                    <p class="card-text">@Model.Email</p>

                    <form asp-action="Crear" asp-controller="Contactos" method="post">
                        <input type="hidden" name="profesionalId" value="@Model.Id" />
                        <button type="submit" class="btn btn-success">Contactar</button>
                    </form>

                    <a href="javascript:history.back()" class="btn btn-secondary mt-3">Volver</a>
                </div>
            </div>
        </div>
    </div>
</div>
