@model Proyecto_PNT1.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<h1>Detalles del Usuario</h1>

<div>
    <h4>Usuario</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EsProfesional)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EsProfesional)
        </dd>
        @if (Model.EsProfesional)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Profesion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Profesion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Experiencia)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Experiencia)
            </dd>
        }
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
    <a asp-action="Index">Atrás a la Lista</a>
</div>
